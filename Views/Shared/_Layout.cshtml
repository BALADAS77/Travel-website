<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Travel.styles.css" asp-append-version="true" />
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <div class="nav">
            <h1>Explore Nature</h1>
            <div class="nav-items">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="Packages">Packages</a></li>
                    <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-primary ms-3 me-3">Contact Us</a>
                </ul>
            </div>
            <div class="menu-icon" onclick="shownav()">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>
        <!--side navbar-->
        <div class="side-nav">
            <p onclick="closenav()">
                <i class="fa-solid fa-xmark"></i>
            </p>
            <div class="side-nav-links">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="Packages">Packages</a></li>
                    <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-primary ">Contact Us</a>
                </ul>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Travel - <a asp-area="" asp-controller="Home" asp-action="Contact">Contact-Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.6/lottie.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
